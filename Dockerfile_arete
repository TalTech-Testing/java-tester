FROM openjdk:11-jdk
MAINTAINER Andres Antonen <andres.antonen@gmail.com>
LABEL Description="Hodor Java 11 with StudentTester with Arete-compatible entrypoint"
COPY build/libs/studenttester-core-2.0.jar StudentTester.jar

ENTRYPOINT [ "bash", "-c", "TIMEVAR=$(date +%s%N); TMPD=$(mktemp -d); cd $TMPD; java -jar /StudentTester.jar -i /host/input.json -o /host/output.json -tmp $TMPD -r FILEWRITER,COMPILER,TESTNG,REPORT -jsontxt > >(tee /log/$TIMEVAR-stdout.log) 2> >(tee /log/$TIMEVAR-stderr.log >&2)" ]